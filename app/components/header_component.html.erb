<header class="position-relative d-flex justify-content-center align-items-center py-2 bg-primary text-white">
  <h1 class="fw-bold fs-2">
    My Expenses
    <% if @page_title.present? %>
      <span>
        - <%= @page_title %>
      </span>
    <% end %>
  </h1>
  <nav class="position-absolute translate-middle top-50 end-0 d-flex">
    <% if @user.present? && @user.name %>
      <span class="text-white fw-bold fs-5">
        <%= @user.name %>
      </span>
    <% end %>
    <% if @logged_in.present? && @logged_in %>
      <%= button_to " - Logout", session_path(:user), method: :delete, class: 'border-0 text-white bg-transparent fw-bold fs-5' %>
    <% end %>
  </nav>
</header>
