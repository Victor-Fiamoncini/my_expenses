<% content_for :header do %>
  <%= render HeaderComponent.new page_title: 'New', logged_in: logged_in?, user: current_user %>
<% end %>
<main id="expenses-new">
  <%= form_with model: @expense, url: expenses_path do |form| %>
    <% if @expense.errors.any? %>
      <%= render AlertComponent.new type: 'danger', message: @expense.errors.full_messages.first %>
    <% end %>
    <div class="mb-4">
      <%= form.label :name, class: 'form-label' %>
      <%= form.text_field :name, class: 'form-control', placeholder: 'A name that makes sense with the expense' %>
    </div>
    <div class="mb-4">
      <%= form.label :value, class: 'form-label' %>
      <%= form.text_field :value, id: 'expense-value-input', class: 'form-control', placeholder: 'A numeric value' %>
    </div>
    <div class="mb-4">
      <%= form.label :category, class: 'form-label' %>
      <%= form.select :category, category_options, { include_blank: false }, class: 'form-select' %>
    </div>
    <div>
      <%= link_to 'Back', expenses_path, class: 'btn btn-secondary text-white' %>
      <%= form.submit 'Create expense', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
