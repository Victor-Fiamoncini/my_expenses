<% content_for :title do %>
  Home
<% end %>

<main id="expenses-index">
  <%= link_to 'New Expense', new_expense_path, class: 'btn btn-small btn-info text-white mb-4' %>
  <table class="table table-sm table-striped align-middle border-top-none">
    <caption>List of your expenses</caption>
    <thead class="table-light">
      <tr>
        <th scope="col">#</th>
        <th scope="col">Titulo</th>
        <th scope="col">Valor</th>
        <th scope="col">Ações</th>
      </tr>
    </thead>
    <tbody>
      <% @expenses.each do |expense| %>
        <tr>
          <th scope="row">
            <%= expense.id %>
          </th>
          <td>
            <%= expense.name %>
          </td>
          <td>
            <%= expense.value %>
          </td>
          <td>
            <%= link_to 'Edit', edit_expense_path(expense), class: 'btn btn-small btn-warning text-white' %>
            <%= link_to 'Delete', expense, class: 'btn btn-small btn-info text-white' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</main>
