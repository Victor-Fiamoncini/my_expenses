<% content_for :title do %>
  Home
<% end %>

<main id="expenses-index">
  <%= link_to "New Expense", new_expense_path, class: "btn btn-small btn-info text-white mb-4" %>
  <table class="table table-striped table-hover align-middle">
    <caption>List of your expenses</caption>
    <thead class="table-light">
      <tr>
        <th scope="col">#</th>
        <th scope="col">Titulo</th>
        <th scope="col">Valor</th>
        <th scope="col" class="text-end">Ações</th>
      </tr>
    </thead>
    <tbody>
      <% @expenses.each do |expense| %>
        <tr>
          <th scope="row">
            <%= expense.id %>
          </th>
          <td>
            <%= expense.name %>
          </td>
          <td>
            <%= number_to_currency_br expense.value %>
          </td>
          <td class="text-end">
            <%= link_to "Edit", edit_expense_path(expense), class: "btn btn-small btn-warning text-white" %>
            <%= link_to "Delete", expense, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-small btn-danger text-white" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</main>
