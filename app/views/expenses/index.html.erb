<% content_for :header do %>
  <%= render HeaderComponent.new page_title: 'Home', logged_in: logged_in?, user: current_user %>
<% end %>
<main id="expenses-index">
  <div class="d-flex justify-content-between align-items-center gap-4 mb-4">
    <%= link_to "New Expense", new_expense_path, class: "btn btn-small btn-primary text-white" %>
    <div class="d-flex align-items-center h-100 gap-2">
      <% if @total_spent > 0 %>
        <span class="text-primary fw-bold">
          Total expenses:
          <%= format_number_to_currency @total_spent %>
        </span>
      <% end %>
      <% if @total_spent > 0 && @average > 0 %>
        <span class="text-primary fw-bold">|</span>
      <% end %>
      <% if @average > 0 %>
        <span class="text-primary fw-bold">
          Average:
          <%= format_number_to_currency @average %>
        </span>
      <% end %>
    </div>
  </div>
  <% if @expenses.present? %>
    <table class="table table-striped table-hover align-middle">
      <caption>List of your expenses</caption>
      <thead class="table-light">
        <tr>
          <th scope="col">#</th>
          <th scope="col">Title</th>
          <th scope="col">Value</th>
          <th scope="col">Payment Date</th>
          <th scope="col" class="text-end">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @expenses.each do |expense| %>
          <tr>
            <th scope="row"><%= expense.id %></th>
            <td><%= expense.name %></td>
            <td><%= format_number_to_currency expense.value %></td>
            <td><%= format_date_to_day_month_and_year expense.payment_date %></td>
            <td class="text-end">
              <%= link_to "Edit", edit_expense_path(expense), class: "btn btn-small btn-warning text-white" %>
              <%= link_to "Delete", expense, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-small btn-danger text-white" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div class="alert alert-light fs-4 text-center">
      There are no expenses registered so far, click above to start registering
    </div>
  <% end %>
  <%= will_paginate @expenses, renderer: WillPaginate::ActionView::BootstrapLinkRenderer, list_classes: ["pagination", "justify-content-start"] %>
</main>
